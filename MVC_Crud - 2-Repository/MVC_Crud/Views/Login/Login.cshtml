@model MVC_Crud.Data.Entities.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- @Html.ValidationSummary() Requrid zorunlu alanda hata alırsak bütün hataları listeler-->
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Username)<!--username boş geçiilirse hata mesajını buraya yaz-->
                <br />
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Pass)<!--pass boş geçiilirse hata mesajını buraya yaz-->
                <br />
                @Html.LabelFor(m => m.Pass)
                @Html.TextBoxFor(m => m.Pass, new { @class = "form-control", placeholder = "Şifre" })
            </div>
            <button type="submit" class="btn btn-block btn-success">Giriş Yap</button>
            @Html.ActionLink("Kayıt Ol", "Save")
        }
    </div>
</body>
</html>
